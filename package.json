{
  "name": "confuscript",
  "version": "0.0.1",
  "description": "Confused programming language",
  "author": "Floffah",
  "license": "LGPL-3.0",
  "private": true,
  "devDependencies": {
    "@floffah/build": "^1.0.0",
    "@octokit/core": "^3.4.0",
    "@typescript-eslint/eslint-plugin": "^4.23.0",
    "@typescript-eslint/parser": "^4.23.0",
    "all-contributors-cli": "^6.20.0",
    "eslint": "^7.26.0",
    "eslint-config-prettier": "^8.3.0",
    "lerna": "^4.0.0",
    "npm-check-updates": "^11.5.11",
    "prettier": "^2.3.0",
    "typescript": "^4.2.4"
  },
  "workspaces": [
    "packages/*",
    "test"
  ],
  "scripts": {
    "dev": "node scripts/dist/build.js dev",
    "prepack": "yarn build build -p",
    "test": "yarn workspace test test",
    "lint": "yarn eslint . --ext .js,.jsx,.ts,.tsx",
    "allc": "yarn all-contributors",
    "updates": "ncu --packageManager yarn --deep --target minor",
    "forceupdate": "ncu --packageManager yarn --deep --target minor -u"
  }
}
